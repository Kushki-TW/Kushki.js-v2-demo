{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TokenResponse",
  "description": "@public Contains the card token, and if exist, the deferred data object.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "token": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]{32}$"
    },
    "deferred": {
      "description": "@public Contains the deferred params data that was collected in the form with the hosted fields.",
      "type": "object",
      "title": "DeferredValuesResponse",
      "properties": {
        "graceMonths": {
          "description": "@typeParam  number - From 0 to more",
          "type": "number"
        },
        "creditType": {
          "description": "@typeParam  string - Code of credit type.",
          "type": "string"
        },
        "months": {
          "description": "@typeParam  number - From 0 to more",
          "type": "number"
        }
      }
    }
  },
  "required": ["token"]
}
