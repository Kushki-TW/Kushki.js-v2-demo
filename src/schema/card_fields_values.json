{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CardFieldValues",
  "definitions": {
    "fieldValidity": {
      "type": "object",
      "title": "FieldValidity",
      "additionalProperties": false,
      "properties": {
        "isValid": {
          "type": "boolean"
        },
        "errorType": {
          "type": "string",
          "enum": ["empty", "invalid"]
        }
      },
      "required": ["isValid"]
    },
    "fieldInstance": {
      "type": "object",
      "title": "FieldInstance",
      "additionalProperties": false,
      "properties": {
        "selector": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "hostedField": {
          "type": "object"
        },
        "validity": {
          "$ref": "#/definitions/fieldValidity"
        }
      },
      "required": ["selector", "validity"]
    }
  },
  "properties": {
    "cardholderName": {
      "$ref": "#/definitions/fieldInstance"
    },
    "cardNumber": {
      "$ref": "#/definitions/fieldInstance"
    },
    "cvv": {
      "$ref": "#/definitions/fieldInstance"
    },
    "deferred": {
      "$ref": "#/definitions/fieldInstance"
    },
    "expirationDate": {
      "$ref": "#/definitions/fieldInstance"
    }
  },
  "type": "object"
}
